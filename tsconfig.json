{
  "compilerOptions": {
    "outDir": "dist", // 输出目录
    "sourceMap": true, // 生成 sourceMap
    "target": "es2016", // 目标语法
    "module": "esnext", // 模块格式
    "moduleResolution": "node", // 模块解析方式
    "strict": false, // 不开启严格模式
    "resolveJsonModule": true, // 解析json 模块
    "esModuleInterop": true, // 允许 es6 模块导入 commonjs 模块
    "jsx": "preserve", // jsx 不转译
    "lib": ["esnext", "dom"], // 支持的类库： esnext, dom
    "baseUrl": ".",
    "paths": {
      "@vue/*": ["packages/*/src"]
    }
  }
}
